<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= student.firstName %> <%= student.lastName %>'s Profile</title>
    <link rel="stylesheet" href="/profile.css">
    <link rel="stylesheet" href="/body.css">
</head>
<body>
    <%- include('header.ejs') %>
    <div class='container'>
        <section class='sec-profile'>
            <div class='sec-detailContainer' id='sec-detailContainer'>
                <div class='imgQuote'>
                    <img src='<%= nav.images + student.src %>' onerror='this.src="<%= nav.defaultImg %>"' alt='student photo' class='img'>
                    <div class='name'>
                        <h1><%= student.firstName %></h1>
                        <h3><%= student.lastName %></h3>
                    </div>
                    <div class='skills'>
                        <h4><%= student.title %></h4>
                        |
                        <% student.skills.forEach(skill => {%>
                            <%= skill %> |
                        <%})%>
                    </div>
                    <div class='quote'>
                        <h2 class='quotationMarkOpen'>&#10077;</h2>
                        <h2 class='quoteText'><%= student.favoriteQuote %></h2>
                        <h2 class='quotationMarkClose'>&#10080;</h2>
                    </div>
                </div>
            </div>
            <div>
                <label class='btn' onclick='location.href = "/api/<%= student.id %>"'>Get JSON</label>
            </div>
            <div class='infoContainer' >
                <div>
                    <h4><%=formTemp.whySofterDeveloper.display%></h4>
                    <p>&#8220;<%= student.whySofterDeveloper %>&#8221;</p>
                </div>
                <div>
                    <h4><%=formTemp.longTermVision.display%></h4>
                    <p>&#8220;<%= student.longTermVision %>&#8221;</p>
                </div>
                <div>
                    <h4><%=formTemp.motivatesMe.display%></h4>
                    <p>&#8220;<%= student.motivatesMe %>&#8221;</p>
                </div>
                <div>
                    <h4><%=formTemp.favoriteQuote.display%></h4>
                    <p>&#8220;<%= student.favoriteQuote %>&#8221;</p>
                </div>
                <div>
                    <h4><%=formTemp.joinedOn.display%></h4>
                    <p>&#8220;<%= student.joinedOn %>&#8221;</p>
                </div>
                
                
            </div>
        </section>
    </div>
    <%- include('footer.ejs') %>
</body>
</html>

